<resources>
    <!-- Base application theme. -->
    <style name="Theme.PredictPopularityOfGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.PredictPopularityOfGame</item>
    </style>

    <style name="MyForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/gray_CBCBCB</item>
    </style>

    <style name="TextInputEditText" >
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_939393</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:dropDownHeight">150dp</item>
        <item name="android:textColorHint">@color/gray_939393</item>

    </style>

    <style name="TextForm" >
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckButton">
        <item name="android:padding">24dp</item>
        <item name="android:elevation">12dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:outlineSpotShadowColor">@color/black</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChooseButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray_CBCBCB</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="FeatureButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray_CBCBCB</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>